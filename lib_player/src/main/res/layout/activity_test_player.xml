<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testui.TestPlayerActivity">



    <SurfaceView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/player_sur"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>


    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_sur"
        android:id="@+id/playe_start_video"
        android:text="start_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playe_start_video"
        android:id="@+id/playe_start_audio"
        android:text="start_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playe_start_audio"
        android:id="@+id/start_audio_and_video"
        android:text="start_audio_and_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/playe_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_sur"
        android:text="pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>