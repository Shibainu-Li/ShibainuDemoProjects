<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".testdbui.DbMainActivity">

    <Button
        android:id="@+id/find_user"
        android:text="find_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/find_user_uid"
        android:text="find_user_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/add_user"
        android:text="add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/delet_user"
        android:text="delet_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>